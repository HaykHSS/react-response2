{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "RUN go install (?<depName>[^@]+)@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "go",
      "versioningTemplate": "go"
    }
  ]
}
